<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="branches" name="Branches">
    <t t-call="website.layout">
        <div class="container main_branch_el_selector">
            <div class="row mt32">
                <div class="col-md-6 offset-md-3">
                    <div class="row">
                        <div class="col-md-9">
                            <input class="form-control" type="text" name="create_branch" placeholder="branch name..." />
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="form-control btn btn-primary create_branch">Create</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 offset-md-3 branch_list_cl">
                    <t t-call="demojs.branch_tmpl"/>
                </div>
            </div>
        </div>
    </t>
</template>

<template id="branch_tmpl">
    <ul class="list-group mt32" t-if="branches">
        <t t-foreach="branches" t-as="branch">
            <li class="list-group-item d-flex justify-content-between align-items-center" t-att-branch_id="branch.id">
                <span>
                    <t t-out="branch.name"/>
                </span>
                <span>
                    <button class="btn btn-sm btn-outline-primary me-2 edit_branch" type="button" title="Edit" t-att-branch_id="branch.id">
                        <i class="fa fa-edit"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger delete_branch" type="button" title="Delete" t-att-branch_id="branch.id">
                        <i class="fa fa-trash"></i>
                    </button>
                </span>
            </li>
        </t>
    </ul>
</template>
<template id="edit_branch">
    <li class="list-group-item d-flex justify-content-between align-items-center" t-att-branch_id="branch.id">
        <input class="form-control" type="text" name="edit_branch" t-att-value="branch.name" style="width: 85%;"/>
        <span>
            <button class="btn btn-sm btn-outline-primary me-2 save_branch" type="button" title="Save" t-att-branch_id="branch.id">
                <i class="fa fa-save"></i>
            </button>
        </span>
    </li>
</template>
</odoo>