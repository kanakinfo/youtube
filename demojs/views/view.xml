<odoo>
    <record id="view_branch_tree" model="ir.ui.view">
        <field name="name">branch.tree</field>
        <field name="model">branch.branch</field>
        <field name="arch" type="xml">
            <tree string="Branches">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_branch_form" model="ir.ui.view">
        <field name="name">branch.form</field>
        <field name="model">branch.branch</field>
        <field name="arch" type="xml">
            <form string="Branch">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_branch" model="ir.actions.act_window">
        <field name="name">Branches</field>
        <field name="res_model">branch.branch</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_branch"
        name="Branches"
        sequence="10"
        parent="website.menu_website_configuration"/>

    <menuitem id="menu_website_branch"
        parent="menu_branch"
        sequence="10"
        name="Brnaches"
        action="action_branch"/>
</odoo>